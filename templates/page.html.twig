<!DOCTYPE html>
<html lang="en">
<head>
{{
    helper.metas()
    .add({charset: 'utf-8'})
    .addName('viewport', 'width=device-width,initial-scale=1,shrink-to-fit=no')
    .addHttp('x-ua-Compatible', 'ie=edge')
    |raw
}}
{{ helper.title(title)|raw }}
{% block styles %}
{{
    helper.styles()
    .add('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    |raw
}}
{% endblock %}
</head>
<body>
{% block content %}
    <h1>{{ title }}</h1>
{% endblock %}
{% block scripts %}
{{
    helper.scripts()
    .add('https://code.jquery.com/jquery-1.12.3.min.js')
    .add('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    |raw
}}
{% endblock %}
</body>
</html>
